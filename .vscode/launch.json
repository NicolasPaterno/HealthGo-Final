{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Backend (.NET)",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/APPS/api/back-end/entra21-atividade-crud-api/API_HealthGo/bin/Debug/net7.0/API_HealthGo.dll",
      "args": [],
      "cwd": "${workspaceFolder}/APPS/api/back-end/entra21-atividade-crud-api/API_HealthGo",
      "console": "internalConsole",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "launchBrowser": {
        "enabled": true,
        "args": "https://localhost:7243/swagger",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start https://localhost:7243/swagger"
        }
      }
    },
    {
      "name": "Launch Frontend (Vite)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/APPS/web/node_modules/.bin/vite",
      "args": [
        "--port",
        "3000"
      ],
      "cwd": "${workspaceFolder}/APPS/web",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch Full Stack",
      "configurations": [
        "Launch Backend (.NET)",
        "Launch Frontend (Vite)"
      ]
    }
  ]
}